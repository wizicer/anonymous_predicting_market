{
  "name": "anonymous_predicting_market",
  "version": "1.0.0",
  "description": "Anonymous Predicting Market",
  "private": true,
  "workspaces": [
    "ui"
  ],
  "scripts": {
    "build:bet": "bash ./scripts/compile.sh circuits/src/Bet_main && bash ./scripts/cpcircuit.sh circuits/src/Bet",
    "build:open": "bash ./scripts/compile.sh circuits/src/BatchOpen_main && bash ./scripts/cpcircuit.sh circuits/src/BatchOpen",
    "build:circuits": "npm run build:bet && npm run build:open",
    "build:ui": "npm run build --workspace=ui",
    "setup:ptau": "wget -O pot_final.ptau https://hermez.s3-eu-west-1.amazonaws.com/powersOfTau28_hez_final_19.ptau",
    "build": "npm run build:circuits && npm run compile && npm run build:ui",
    "test:gas": "cross-env REPORT_GAS=true hardhat test",
    "test": "hardhat test",
    "dev:ui": "npm run dev --workspace=ui",
    "dev:circuit": "nodemon --watch circuits --ext circom --exec circom -l ./node_modules",
    "compile": "hardhat compile",
    "chain:node": "hardhat node",
    "chain": "concurrently \"npm run chain:node\" \"npm run chain:deploy\"",
    "chain:deploy": "hardhat run scripts/deploy.ts --network localhost"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "ethers": "^6.0.0",
    "hardhat": "^2.19.0",
    "nodemon": "^3.1.10",
    "snarkjs": "^0.7.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.3.0"
  }
}
